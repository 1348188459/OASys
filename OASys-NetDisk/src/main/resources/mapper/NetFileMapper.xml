<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.linter.oasys.netdisk.dao.NetFileDao">

    <resultMap type="cn.linter.oasys.netdisk.entity.NetFile" id="NetFileMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="path" column="path"/>
        <result property="type" column="type"/>
        <result property="size" column="size"/>
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="parentId" column="parent_id"/>
        <result property="shared" column="is_shared"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="contentType" column="content_type"/>
    </resultMap>

    <!--通过ID查询单个文件-->
    <select id="select" resultMap="NetFileMap">
        select id, name, path, type, size, user_id, user_name, parent_id, is_shared, create_time, update_time
        from net_file
        where id = #{id}
    </select>

    <!--查询所有文件-->
    <select id="list" resultMap="NetFileMap">
        select id, name, path, type, size, user_id, user_name, parent_id, is_shared, create_time, update_time, content_type
        from net_file
        <where>
            <if test="parentId != null">
                and parent_id = #{parentId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="shared != null">
                and is_shared = #{shared}
            </if>
        </where>
    </select>

    <!--插入单个文件-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into net_file(name, path, type, size, user_id, user_name, parent_id, is_shared, create_time, update_time,content_type)
        values (#{name}, #{path}, #{type}, #{size}, #{userId}, #{userName}, #{parentId}, 0, now(), now(), #{contentType})
    </insert>

    <!--更新文件-->
    <update id="update">
        update net_file
        set
        <if test="name != null and name != ''">
            name = #{name},
        </if>
        <if test="shared != null">
            is_shared = #{shared},
        </if>
        update_time = now()
        where id = #{id}
    </update>

    <!--删除文件-->
    <delete id="delete">
        delete
        from net_file
        where id = #{id}
    </delete>

</mapper>